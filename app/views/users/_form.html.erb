<div class="row">
	<div class="col-sm-12">
		<%= form_for(@user)  do |f| %>

			<% if @user.errors.any? %>
			<div class = "error-red">
				<span class="close-error">x</span>
				<h3>Errors</h3>
				<ul>
				  <% @user.errors.full_messages.each do |msg| %>
				    <li><%= msg %></li>
				  <% end %>
				</ul>
				</div>
			<% end %>
			

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :first_name%>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :first_name, class: "form-control", placeholder: "Enter Firstname", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :last_name %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :last_name, class: "form-control", placeholder: "Enter Lastname", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :mobile_number %>
				</div>
				<div class="col-sm-8">
					<%= f.number_field :mobile_number, class: "form-control", placeholder: "Enter mobilenumber", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :age %>
				</div>
				<div class="col-sm-8">
					<%= f.number_field :age, class: "form-control", placeholder: "Enter age", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :batch %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :batch, class: "form-control", placeholder: "Enter batch (eg. 2016-2020)", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :degree %>
				</div>
				<div class="col-sm-8 ">
					<%= f.select(:degree, ['B.Tech - IT'], {}, { :class => 'form-control' }) %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :collegename %>
				</div>
				<div class="col-sm-8">
					<%= f.select(:college_name, ["St.Joseph's Institute of Technology"], {}, { :class => 'form-control' }) %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :register_number %>
				</div>
				<div class="col-sm-8">
					<%= f.number_field :register_number, :readonly => f.object.persisted?, class: "form-control", placeholder: "Enter register number", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :company_name %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :company_name, class: "form-control", placeholder: "Enter company name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :designation %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :designation, class: "form-control", placeholder: "Enter designation", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :location %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :location, class: "form-control", placeholder: "Enter location", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :email%>
				</div>
					<div class="col-sm-8">
						<%= f.email_field :email, :readonly => f.object.persisted?,class:"form-control",placeholder: "Enter email"  %>
					</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :password%>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password,class:"form-control",placeholder: "Enter password" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-8 col-sm-offset-2">
					<%= f.submit %>
				</div>
			</div>

		<%end%>
	</div>
</div>

<script>
var phone = $("input#user_mobile_number").val();
    if (phone !== "" && !$.isNumeric(phone)) {
  //Check if phone is numeric
  $("label#phone_error").show(); //Show error
  $("input#phone").focus(); //Focus on field
  //return false;
}
var reg_num = $("input#user_register_number").val();
    if (reg_num !== "" && !$.isNumeric(reg_num)) {
  //Check if phone is numeric
  $("label#phone_error").show(); //Show error
  $("input#phone").focus(); //Focus on field
  //return false;
}
var reg_num = $("input#user_register_number").val();
    if (reg_num !== "" && !$.isNumeric(reg_num)) {
  //Check if phone is numeric
  $("label#phone_error").show(); //Show error
  $("input#phone").focus(); //Focus on field
  //return false;
}
var age = $("input#user_age").val();
    if (age !== "" && !$.isNumeric(age)) {
  //Check if phone is numeric
  $("label#phone_error").show(); //Show error
  $("input#phone").focus(); //Focus on field
  //return false;
}
$(".close-error").click(function(){
  $(".error-red").animate({opacity:0}, 500);
});

</script>